<Window x:Class="HTMLJoiner.ImproveMe"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="ImproveMe" Height="228.125" Width="375">
    <Grid>
        <Label Content="Tag ID" HorizontalAlignment="Left" Margin="10,19,0,0" VerticalAlignment="Top"/>
        <TextBox Name="Id" HorizontalAlignment="Left" Height="23" Margin="94,19,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="228"/>

        <Label Content="Tag Name" HorizontalAlignment="Left" Margin="10,60,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="Class" HorizontalAlignment="Left" Height="23" Margin="94,60,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="228"/>

        <Button Name="Update" Content="Save" HorizontalAlignment="Left" Margin="78,147,0,0" VerticalAlignment="Top" Width="75" Click="Update_Click"/>
        <Label Content="Tag Attribute" HorizontalAlignment="Left" Margin="10,105,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="Class_Copy" HorizontalAlignment="Left" Height="23" Margin="94,105,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="228"/>
        <Button x:Name="Cancel" Content="Cancel" HorizontalAlignment="Left" Margin="247,147,0,0" VerticalAlignment="Top" Width="75" Click="Cancel_Click"/>



    </Grid>
</Window>
