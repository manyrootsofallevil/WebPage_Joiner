<Window x:Class="HTMLJoiner.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <Button Content="Load Files" HorizontalAlignment="Left" Margin="294,280,0,0" VerticalAlignment="Top" Width="75" Name="LoadFiles" Click="LoadFiles_Click"/>
        <Button Content="Save File" HorizontalAlignment="Left" Margin="405,280,0,0" VerticalAlignment="Top" Width="75" Name="SaveFile" Click="SaveFile_Click"/>
        <ListBox Name="Items" HorizontalAlignment="Left" Height="231" Margin="32,23,0,0" VerticalAlignment="Top" Width="448" ItemsSource="{Binding Path=ItemList}" SelectionMode="Extended"/>
        <Button Name="Clear" Content="Clear List" HorizontalAlignment="Left" Margin="32,280,0,0" VerticalAlignment="Top" Width="75" Click="Clear_Click"/>
        <Button Name="ClearSelected" Content="Clear Selected" HorizontalAlignment="Left" Margin="129,280,0,0" VerticalAlignment="Top" Width="93" Click="ClearSelected_Click"/>
    </Grid>
</Window>
